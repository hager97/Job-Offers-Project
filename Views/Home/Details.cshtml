@model jobs.Models.Job

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_MainLayoutPage.cshtml";
}

<h2>Details</h2>

<div>
    <h4>Job</h4>
    <hr />
    <div class="alert alert-info" role="alert">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Category.CategoryName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Category.CategoryName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.JobTitle)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.JobTitle)
            </dd>

            <dt>
                <b>متطلبات الوظيفة</b>
            </dt>

            <dd>
                <h5> @Html.Raw(HttpUtility.HtmlDecode(Html.DisplayFor(model => model.JobContent).ToString()))</h5>
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.User.Email)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.User.UserName)
            </dd>

        </dl>
    </div>
    </div>

    <p>
        @Html.ActionLink("التقدم الي هذه الوظيفة", "Apply", new { id = Model.Id }, new { @class = "btn btn-success" }) |
        @Html.ActionLink("العوده الي الصفحه الرئيسية", "Index", new { @class = "btn btn-defualt" })
    </p>
