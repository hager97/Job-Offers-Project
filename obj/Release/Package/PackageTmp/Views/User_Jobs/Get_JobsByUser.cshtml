@model IEnumerable<jobs.Models.ApplyForJob>

@{
    ViewBag.Title = "Get_JobsByUser";
    Layout = "~/Views/Shared/_MainLayoutPage.cshtml";
}

<h2>جميع الوظائف المتقدم اليها  </h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Job.JobTitle)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Message)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ApplyDate)
        </th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelitem => item.Job.JobTitle)
            </td>

            <td>
                @Html.Raw(HttpUtility.HtmlDecode(Html.DisplayFor(modelItem => item.Message).ToString()))
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApplyDate)
            </td>

            <td>
                @Html.ActionLink("تعديل", "Edit", new { id = item.Id }) |
                @Html.ActionLink("تفاصيل", "DetailsOfJob", new { id = item.Id }) |
                @Html.ActionLink("حذف", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
@Html.ActionLink("الذهاب الي الصفحة الرئيسية", "Index", "Home")
