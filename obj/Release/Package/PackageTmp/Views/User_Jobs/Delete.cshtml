@model jobs.Models.ApplyForJob

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_MainLayoutPage.cshtml";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>ApplyForJob</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
          عنوان الوظيفة
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Job.JobTitle)
        </dd>

         <dt>
           نص الرسالة
        </dt>

         <dd>
             @Html.Raw(HttpUtility.HtmlDecode(Html.DisplayFor(model => model.Message).ToString()))
         </dd>

        <dt>
          تاريخ الارسال
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ApplyDate)
        </dd>



    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Get_JobsByUser")
        </div>
    }
</div>
